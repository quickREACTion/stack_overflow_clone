@model MessageValidator
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
    <title>Create Message</title>
    <style>
        #container {
            width: 100em;
            margin: 0 auto;
            background: linear-gradient(to bottom, lightgray, white);
        }

        .customLi:hover {
            background-color: transparent !important;
            color: black !important;
        }

        .footerMainDiv {
            position: inherit !important;
            margin-top: 0 !important;
            height: 8em !important;
        }
    </style>
</head>
<body>
    <div id="container">
        <div class="sideBarNavMainDiv">
            <h1>Stack Attack</h1>
            <div class="mainDashboardHeaderDiv">
                <div class="mainDashboardHeaderProfileDiv">
                    <img src="~/images/placeholderProfile.png" class="profilePic">
                    <h3 class="profileUserName">@ViewBag.user.Username</h3>
                    <a href="/Profile/@ViewBag.user.usersId" class="profileUserName"><i class="fas fa-user"></i>View Profile</a>
                </div>
            </div>
            <nav>
                <ul>
                    <li><a href="/Dashboard"><i class="fas fa-home"></i>Dashboard</a></li>
                    <li><a href="/Profile/@ViewBag.user.usersId"><i class="fas fa-user"></i>Profile</a></li>
                    <li class="customLi"><i class="fas fa-edit"></i>Create Post</li>
                    <li><a href="/"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
                </ul>

            </nav>
            <div class="cfb"></div>
        </div>

        <div class="formParentDiv">
            <div style="margin-bottom: 10%;">
                <h3><i class="fas fa-edit"></i>Compose</h3>
                <p>(Submit an issue you are stuck on!)</p>
            </div>

            <form asp-action="createMessage" asp-controller="Home" method="POST">
                <div class="ComposeMessageForm" style="margin-bottom: 5%;">
                    <span asp-validation-for="Message"></span>
                    <p>Post Title: </p>
                    <input type="text" asp-for="Message">
                </div>

                <div class="ComposeMessageForm" style="margin-bottom: 5%;">
                    <span asp-validation-for="Description"></span>
                    <p>Description: </p>
                    <textarea asp-for="Description" row="6"></textarea>
                </div>

                <div class="ComposeMessageForm" style="margin-bottom: 5%;">
                    <span asp-validation-for="CodeSnippit"></span>
                    <p>Code Snippit: </p>
                    <textarea asp-for="CodeSnippit" row="50" placeholder="Optional"></textarea>
                </div>

                <div class="ComposeMessageForm" style="margin-bottom: 5%;">
                    <span asp-validation-for="Bug"></span>
                    <p>Steps taken to resolve: </p>
                    <textarea asp-for="Bug" row="50" placeholder="Optional"></textarea>
                </div>

                <input type="submit" name="submit" value="Send Message" class="ComposeMessageSubmitButton">
            </form>


        </div>

        <div class="cfb"></div>

        <div class="footerMainDiv">
            <h1>Stack Attack</h1>
            <ul>
                <li><a href="/Dashboard"><i class="fas fa-home"></i>Dashboard</a></li>
                <li><a href="/Profile/@ViewBag.user.usersId"><i class="fas fa-user"></i>Profile</a></li>
                <li><a href="/"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
            </ul>
        </div>
    <div class="cfb"></div>
    </div>
</body>
</html>